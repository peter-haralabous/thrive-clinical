{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    // "rootDir": "./src",
    // "outDir": "./dist",

    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "module": "es2022",
    "moduleResolution": "bundler",
    "target": "es2022",
    "types": [],
    "lib": ["ES2022", "DOM"],
    // For nodejs:
    // "lib": ["esnext"],
    // "types": ["node"],
    // and npm install -D @types/node

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Style Options
    // "noImplicitReturns": true,
    // "noImplicitOverride": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true,
    // "noPropertyAccessFromIndexSignature": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    // Decorators: enable legacy decorators used by lit's current decorator implementation
    // https://lit.dev/docs/components/decorators/
    // "Our code samples are written for experimental decorators because we recommend them for production at the moment"
    "experimentalDecorators": true,

    // we rely on webpack for output
    "noEmit": true
  },
  // Exclude built/static artifact directory from type checking to avoid duplicate decorator processing
  "exclude": [
    "staticfiles",
    "**/*.test.ts",
    "**/*.spec.ts",
    "vitest.config.ts",
    "**/vitest.config.ts",
    "node_modules"
  ]
}
